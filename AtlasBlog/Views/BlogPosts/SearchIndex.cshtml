@using AtlasBlog.Services.Interfaces
@using X.PagedList

@inject IImageService _imageService

@model IPagedList<BlogPost>


<div class="row row-cols-1 row-cols-md-3 g-2">
    @foreach (var blogPost in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@blogPost.Title</h5>
                    <p class="card-text h6">@blogPost.Abstract</p>
                    <h6 class="card-title texttext-muted fst-italic">Created: @blogPost.Created.ToString("MMM dd, yyyy")</h6>
                </div>
                <div class="card-footer">             
                    <a asp-action="Details" asp-controller="BlogPosts" class="btn btn-sm btn-dark btn-outline-secondary w-100">Read Blog Post</a>
                </div>
            </div>
        </div>
    }
</div>

<hr />

<div class="row">
    <div class="col">

    </div>
</div>