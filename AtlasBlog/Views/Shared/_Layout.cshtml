    <header class="py-5 bg-light border-bottom mb-4">
        <div class="container">
            <div class="text-center my-5">
                <h1 class="fw-bolder">Welcome to Blog Home!</h1>
            </div>
            <form asp-action="SearchIndex" asp-controller="BlogPosts">
                <input class="form-control" type="text" name="searchTerm" />
                <button class="btn btn-sm btn-dark btn-outline-primary w-100">SEARCH</button>
            </form>
        </div>
    </header>

    <div class="container">
        @RenderBody()
